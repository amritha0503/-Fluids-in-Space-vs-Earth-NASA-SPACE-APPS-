/* ===== VISUALIZATION PAGE STYLES ===== */

.visualization-section {
    padding: 2rem 0;
}

.comparison-selector {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin: 2rem 0;
    flex-wrap: wrap;
}

.selector-btn {
    padding: 0.75rem 1.5rem;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    font-size: 0.9375rem;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
}

.selector-btn:hover {
    border-color: var(--primary-color);
    color: var(--text-primary);
}

.selector-btn.active {
    background: var(--primary-color);
    border-color: var(--primary-color);
    color: var(--text-primary);
}

/* Chart Container */
.chart-container {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
    margin: 2rem 0;
    min-height: 400px;
}

#comparisonChart {
    width: 100% !important;
    height: 400px !important;
}

/* Side-by-side Comparison */
.side-by-side {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
}

.comparison-card {
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    transition: var(--transition);
}

.comparison-card:hover {
    border-color: var(--primary-color);
    box-shadow: 0 8px 30px rgba(74, 158, 255, 0.2);
}

.comparison-card h3 {
    text-align: center;
    margin-bottom: 1.5rem;
    font-size: 1.25rem;
    color: var(--text-primary);
}

.comparison-card canvas {
    width: 100%;
    height: 250px;
    border-radius: var(--radius-md);
    background: var(--darker-bg);
    margin-bottom: 1rem;
}

.comparison-stats {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
}

.stat {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.75rem;
    background: var(--darker-bg);
    border-radius: var(--radius-md);
}

.stat-label {
    color: var(--text-secondary);
    font-size: 0.875rem;
}

.stat-value {
    color: var(--primary-color);
    font-weight: 600;
    font-size: 0.9375rem;
}

/* Data Table */
.data-table-container {
    margin: 3rem 0;
    background: var(--card-bg);
    border: 1px solid var(--border-color);
    border-radius: var(--radius-lg);
    padding: 2rem;
    overflow-x: auto;
}

.table-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
}

.data-table {
    width: 100%;
    border-collapse: collapse;
}

.data-table thead {
    background: var(--darker-bg);
}

.data-table th {
    padding: 1rem;
    text-align: left;
    font-weight: 600;
    color: var(--text-primary);
    border-bottom: 2px solid var(--border-color);
}

.data-table td {
    padding: 1rem;
    color: var(--text-secondary);
    border-bottom: 1px solid var(--border-color);
}

.data-table tr:last-child td {
    border-bottom: none;
}

.data-table tr:hover {
    background: rgba(74, 158, 255, 0.05);
}

/* Responsive */
@media (max-width: 768px) {
    .comparison-selector {
        flex-direction: column;
    }
    
    .selector-btn {
        width: 100%;
    }
    
    .side-by-side {
        grid-template-columns: 1fr;
    }
    
    .data-table {
        font-size: 0.875rem;
    }
    
    .data-table th,
    .data-table td {
        padding: 0.75rem 0.5rem;
    }
}
